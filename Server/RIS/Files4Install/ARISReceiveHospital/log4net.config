<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
<section name="log4net" type=" log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
<!--
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler" />
-->
  </configSections>

  <log4net>
    <!-- ログ出力先の定義 -->
    <appender name="RollingLogFileAppender"
        type="log4net.Appender.RollingFileAppender">

      <!-- <param name="Encoding" value="utf-8" /> -->
      <param name="Encoding" value="Shift_JIS" />
      
      <!-- ログ・ファイル名の先頭部分 絶対パスで指定すること。ファイル名を修正した場合はApp.configのlog4netFileRegex、log4netFileDateFormatも修正する-->
      <param name="File" value=".\ARISReceiveHospital\Log\System\ARISReceiveHospital" />

      <!-- 追加書き込み -->
      <param name="AppendToFile" value="true" />

      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="1MB" />
      <CountDirection value="-1" />
      <LockingModel type="log4net.Appender.FileAppender+MinimalLock" />

      <!-- 日付ごとにファイルを作成することを指定 -->
      <param name="RollingStyle" value="composite" />

      <!-- ログ・ファイル名が固定ではないので“false”を指定 -->
      <param name="StaticLogFileName" value="false" />

      <!-- ファイル名の日付部分。ファイル名を修正した場合はApp.configのlog4netFileRegex、log4netFileDateFormatも修正する -->
      <param name="DatePattern" value='"."yyyyMMdd".log"' />

      <layout type="log4net.Layout.PatternLayout">
        <!-- ログの書式 -->
        <conversionPattern value="%-5level %date{yyyy-MM-dd HH:mm:ss.fff} [%thread] %logger %method - %message%newline" />
      </layout>
    </appender>

    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d %-5p [%t] %m%n" />
      </layout>
    </appender>

    <root>
      <!-- ログのレベルを指定 -->
      <!-- Off、Fatal、Error、Warn、Info、Debug、All -->

        <!-- すべてのログレベルを出力 -->
      <level value="ALL" />

      <!-- どのログ出力先を使用するか -->
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="TraceAppender" />
    </root>
  </log4net>
</configuration>