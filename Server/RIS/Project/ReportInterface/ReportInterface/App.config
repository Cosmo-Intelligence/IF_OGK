<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <configSections>
        <section name="requestAdditionSection" type="ReportInterface.Config.RequestAdditionHandler, ReportInterface"/>
    </configSections>
  <connectionStrings>
    <!--<add name="ReportInterface.Properties.Settings.ConnectionStringReport"
      connectionString="DATA SOURCE=OHG_REPORT;PASSWORD=MRMS1;PERSIST SECURITY INFO=True;STATEMENT CACHE SIZE=100;USER ID=MRMS"
      providerName="Oracle.DataAccess.Client" />-->
	  <add name="ReportInterface.Properties.Settings.ConnectionStringReport" connectionString="DATA SOURCE=RRIS;PASSWORD=MRMS1;PERSIST SECURITY INFO=True;STATEMENT CACHE SIZE=100;USER ID=MRMS" providerName="Oracle.DataAccess.Client"/>
	  <!--<add name="ReportInterface.Properties.Settings.ConnectionStringRIS"
	connectionString="DATA SOURCE=OHG_REPORT;PASSWORD=RRIS_SHIFT1;PERSIST SECURITY INFO=True;STATEMENT CACHE SIZE=100;USER ID=RRIS_SHIFT"
      providerName="Oracle.DataAccess.Client" />-->
	<add name="ReportInterface.Properties.Settings.ConnectionStringRIS" connectionString="DATA SOURCE=RRIS;PASSWORD=RRIS1;PERSIST SECURITY INFO=True;STATEMENT CACHE SIZE=100;USER ID=RRIS" providerName="Oracle.DataAccess.Client"/>

	</connectionStrings>
  <appSettings>
    <!-- サービススレッド停止タイムアウト(ms) -->
    <add key="ThreadStopTimeout" value="200000"/>
    <!-- クライアント停止タイムアウト(ms) -->
    <add key="ClientCloseTimeout" value="90000"/>
    <!-- SQLコマンドタイムアウト(s) -->
    <add key="CommandTimeout" value="30"/>
    <!-- ループ休眠時間(ms) -->
    <add key="ThreadSleepTime" value="500"/>
    <!-- log4netファイル日付部分フォーマット log4net.configのRollingLogFileAppenderの出力ファイル名を修正した場合は合わせて修正する -->
    <add key="log4netFileDateFormat" value="yyyyMMdd"/>
    <!-- log4netファイル正規表現パターン TargetGroupは日付部分を指すので必須。log4net.configのRollingLogFileAppenderの出力ファイル名を修正した場合は合わせて修正する -->
    <add key="log4netFileRegex" value="^ReportInterface\.(?&lt;TargetGroup&gt;\d{8})\.log(\.[0-9]*)?$"/>
    <!-- 過去ログファイルの保存期間(日数) -->
    <add key="LogStoreTerm" value="30"/>
    <!-- RIS側PET-CTの検査種別ID -->
    <add key="KensaTypeIDPETCT" value="F400"/>
    <add key="ClientSettingsProvider.ServiceUri" value=""/>
    <add key="PetCtPurpose" value="false"/>
  </appSettings>
  <!-- 画像診断加算の手技ID -->
  <requestAdditionSection>
    <requestAdditionElements>
        <requestAdditionElement infuseID="JJ0410"/>
        <requestAdditionElement infuseID="JJ0415"/>
        <requestAdditionElement infuseID="JJ0420"/>
    </requestAdditionElements>
  </requestAdditionSection>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
  </startup>

  <!-- ********** ★★★★★重要★★★★★ ****************************** -->
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Oracle.DataAccess" publicKeyToken="89B483F429C47342"/>
        <!-- Oracle.DataAccessバージョン設定 -->
        <!-- newVersionには、現地環境のOracle.DataAccessバージョンを設定して下さい。 -->
        <!-- [Oracle.DataAccessバージョン確認方法] -->
        <!-- Oracleインストールディレクトリ\ODP.NET\bin\4にOracle.DataAccess.dllファイルが存在するので -->
        <!-- 右クリック → プロパティ → 詳細 → ファイルバージョン で確認して下さい。 -->
        <bindingRedirect oldVersion="4.121.2.0" newVersion="4.121.2.0"/>
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  
</configuration>
